<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/dialogthem"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText

            android:id="@+id/edt_nhapkhoanthuchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Khoản chi"/>

        <EditText
            android:id="@+id/edt_nhaploaithuchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Loại chi" />

        <EditText
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:id="@+id/edt_nhapsotienthuchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số tiền"/>


        <RadioGroup
            android:id="@+id/radiogr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:id="@+id/btn_luukhoanthuchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="Lưu" />

            <Button
                android:id="@+id/btn_huykhoanthuchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="Hủy" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radiogr1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        </RadioGroup>

    </LinearLayout>




</LinearLayout>