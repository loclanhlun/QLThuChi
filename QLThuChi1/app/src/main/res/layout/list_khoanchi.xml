<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/img_viewchi"
        android:layout_gravity="center_vertical"
        android:layout_width="70sp"
        android:layout_height="70dp"
        android:background="@drawable/iconkhoanchi2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_khoanchi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2sp"
                android:layout_marginTop="3sp"
                android:layout_weight="1"
                android:text="Khoản chi"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_suakhoanchi"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:background="@drawable/iconnutsua" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_loaichi"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2sp"
                android:layout_marginTop="3sp"
                android:text="Loại chi"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_xoakhoanchi"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_delete_black_24dp" />


        </RadioGroup>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sotienchi"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2sp"
                android:layout_marginTop="3sp"
                android:layout_weight="1"
                android:text="Số tiền"
                android:textColor="@color/colorRed"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="VNĐ"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_ngaythangchi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_weight="1"
                android:text="09-10-2020"
                android:textSize="15sp" />

        </RadioGroup>


    </LinearLayout>

</LinearLayout>